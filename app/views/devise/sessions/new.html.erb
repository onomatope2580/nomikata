<div class="session">
  <div class="session-wrapper">
    <div class="title"><h2>ログインする</h2></div>

    <%= form_with model: @user, url: user_session_path(email: @user.email), local: true do |f| %>
      <div class="field">
        <%= f.label "ニックネーム", class:"label" %><br />
        <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class:"nickname-box" %>
      </div>

      <div class="field">
        <%= f.label "パスワード", class:"label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class:"box" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class:"submit-box" %>
      </div>
    <% end %>

    <%= link_to "最初へ戻る", root_path %>
  </div>
</div>
